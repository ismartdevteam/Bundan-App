<?xml version="1.0" encoding="UTF-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="rectangle" >
            <corners
                android:radius="45dp"
                />
            <gradient
                android:angle="45"
                android:startColor="#f32d84"
                android:endColor="#ff6f55"
                android:type="linear" />
        </shape>
    </item>
    <item
        android:bottom="4dp"
        android:left="4dp"
        android:right="4dp"
        android:top="4dp">

        <shape android:shape="rectangle" >
            <corners
                android:radius="45dp"
                />
            <solid android:color="#464646" />
        </shape>
    </item>

</layer-list>