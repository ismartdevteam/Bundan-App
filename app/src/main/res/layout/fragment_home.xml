<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    tools:context="ismartdev.mn.bundan.fragments.SearchFragment">


    <ismartdev.mn.bundan.views.ProductStackView
        android:id="@+id/tinder_mProductStack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:clipChildren="false"
/>

    <LinearLayout
        android:id="@+id/home_footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"

        android:orientation="horizontal">



        <Button
            android:id="@+id/search_dislike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="dislike" />

        <Button
            android:id="@+id/search_like"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like" />



    </LinearLayout>
</FrameLayout>
